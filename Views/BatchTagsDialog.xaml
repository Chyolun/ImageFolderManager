<mah:MetroWindow x:Class="ImageFolderManager.Views.BatchTagsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="Batch Tags"
        Height="460"
        Width="450"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MahApps.Brushes.Control.Background}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Batch Tag Operations" 
                   FontSize="16" 
                   FontWeight="SemiBold" 
                   Margin="0,0,0,10" 
                   Foreground="White"/>

        <TextBlock Grid.Row="1" 
                   x:Name="SelectedFoldersText" 
                   Text="Selected folders: 0" 
                   Margin="0,0,0,15" 
                   Foreground="LightGreen"/>

        <!-- Add Tags Section -->
        <GroupBox Grid.Row="2" 
                  Header="Add Tags" 
                  Margin="0,0,0,10" 
                  Foreground="White">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="Enter tags to add (use # to separate)" 
                           Margin="0,5,0,5" 
                           Foreground="#CCCCCC"/>

                <TextBox Grid.Row="1" 
                         x:Name="AddTagsTextBox" 
                         Margin="0,0,0,5"/>
            </Grid>
        </GroupBox>

        <!-- Remove Tags Section -->
        <GroupBox Grid.Row="3" 
                  Header="Remove Tags" 
                  Margin="0,0,0,15" 
                  Foreground="White">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="Enter tags to remove (use # to separate)" 
                           Margin="0,5,0,5" 
                           Foreground="#CCCCCC"/>

                <TextBox Grid.Row="1" 
                         x:Name="RemoveTagsTextBox" 
                         Margin="0,0,0,5"/>
            </Grid>
        </GroupBox>

        <!-- Common tags preview section -->
        <GroupBox Grid.Row="4" 
                  Header="Common Tags Preview" 
                  Margin="0,0,0,10" 
                  Foreground="White">
            <TextBlock x:Name="CommonTagsTextBlock" 
                       Margin="5" 
                       TextWrapping="Wrap" 
                       Foreground="LightBlue"
                       Text="No common tags found"/>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Cancel" 
                    Width="80" 
                    Margin="0,0,10,0" 
                    Click="Cancel_Click"/>
            <Button Content="Apply" 
                    Width="80" 
                    Click="Apply_Click"/>
        </StackPanel>
    </Grid>
</mah:MetroWindow>