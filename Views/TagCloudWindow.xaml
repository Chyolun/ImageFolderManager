<mah:MetroWindow x:Class="ImageFolderManager.Views.TagCloudWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:views="clr-namespace:ImageFolderManager.Views"
        xmlns:viewmodels="clr-namespace:ImageFolderManager.ViewModels"
        mc:Ignorable="d"
        Title="Tag Cloud"
        Height="400"
        Width="500"
        MinWidth="200"
        MinHeight="200"
        GlowBrush="{DynamicResource AccentColorBrush}"
        BorderBrush="{DynamicResource AccentColorBrush}"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MahApps.Brushes.Control.Background}">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" 
                   Text="Tag Cloud" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Foreground="White"/>

            <Button Grid.Column="1"
                Name="RefreshButton"
                Content="Refresh"
                Width="80"
                Height="30"
                Click="RefreshButton_Click"
                Margin="0,0,10,0"/>
        </Grid>

        <!-- Main Tag Cloud Area -->
        <Border Grid.Row="1" 
                BorderBrush="#444444" 
                BorderThickness="1" 
                CornerRadius="8" 
                Background="#1A1A1A"
                Padding="10">

            <Grid>
                <!-- Direct implementation of the tag cloud with WrapPanel -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding TagItems}"
                     x:Name="TagItemsControl">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <!-- Ensure the WrapPanel fills the available width and has a proper orientation -->
                                <WrapPanel Orientation="Horizontal" 
                               Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ScrollViewer}}" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Margin="5" 
                          Padding="8,4" 
                          Tag="{Binding Tag}" 
                          Background="Transparent"
                          BorderThickness="0"
                          Click="TagItem_Click"
                          PreviewMouseRightButtonDown="TagItem_RightClick">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" 
                                      CornerRadius="6" 
                                      Background="{TemplateBinding Background}" 
                                      BorderBrush="{Binding Color}" 
                                      BorderThickness="0">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#333333" TargetName="border"/>
                                                    <Setter Property="BorderThickness" Value="1" TargetName="border"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="RenderTransform">
                                                        <Setter.Value>
                                                            <ScaleTransform ScaleX="0.95" ScaleY="0.95" />
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="#" Foreground="{Binding Color}" FontSize="{Binding FontSize}" />
                                        <TextBlock Text="{Binding Tag}" Foreground="{Binding Color}" FontSize="{Binding FontSize}" />
                                        <TextBlock Text="{Binding Count}" Foreground="#777777" FontSize="10" 
                                   VerticalAlignment="Top" Margin="2,0,0,0" />
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Overlay for empty tag cloud -->
                <TextBlock Text="No tags found. Add tags to folders to see them here." 
                       Foreground="#888888" 
                       FontSize="14" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       TextWrapping="Wrap">
                    <TextBlock.Visibility>
                        <Binding Path="TagItems.Count">
                            <Binding.Converter>
                                <views:CountToVisibilityConverter/>
                            </Binding.Converter>
                        </Binding>
                    </TextBlock.Visibility>
                </TextBlock>
            </Grid>
        </Border>

        <!-- Footer -->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="StatusText" 
                       Grid.Column="0" 
                       Text="Right-click on tags to rename them" 
                       Foreground="#AAAAAA"/>

            <Button Grid.Column="1"
                    Name="CloseButton"
                    Content="Close"
                    Width="80"
                    Height="30"
                    Click="CloseButton_Click"/>
        </Grid>
    </Grid>
</mah:MetroWindow>